@model Exercises.Models.ViewModels.CourseVM

@{
    ViewBag.Title = "EditCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Course</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.CourseId)
            <div class="form-group">
                <label>Major</label>
                @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CourseName)</span>
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>      

